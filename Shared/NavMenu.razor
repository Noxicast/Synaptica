<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/index">Synaptica</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/index" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
             
            <NavLink class="nav-link" href="/courses" active="active">
                <span class="oi oi-book" aria-hidden="true"></span> Courses
            </NavLink>

            <NavLink class="nav-link" href="/quizzes" active="active">
                <span class="oi oi-pencil" aria-hidden="true"></span> Quizzes
            </NavLink>

            <NavLink class="nav-link" href="/progress" active="active">
                <span class="oi oi-timer" aria-hidden="true"></span> Progress
            </NavLink>

            <NavLink class="nav-link" href="/profile" active="active">
                <span class="oi oi-person" aria-hidden="true"></span> Profile
            </NavLink>

            <NavLink class="nav-link" href="/support" active="active">
                <span class="oi oi-question-mark" aria-hidden="true"></span> Support
            </NavLink>
        </div>
        
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
